<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:weightSum="100">


    <LinearLayout android:id="@+id/screen"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="35">

        <EditText android:id="@+id/etScreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:gravity="right"
            android:textSize="40dp"
            android:inputType="numberSigned"
            android:cursorVisible= "true"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/row1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:layout_margin="2dp"
        android:weightSum="100">

            <Button android:id="@+id/bClear"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="C"
            android:textSize="30dp"/>

            <Button android:id="@+id/bDiv"
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="fill_parent"
                android:text="/"
                android:textSize="30dp"/>

            <Button android:id="@+id/bMult"
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="fill_parent"
                android:text="X"
                android:textSize="30dp"/>

            <Button android:id="@+id/bDel"
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="fill_parent"
                android:text="Delete"
                android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/row2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:weightSum="100">


        <Button android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="7"
            android:textSize="30dp"/>

        <Button android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="8"
            android:textSize="30dp"/>

        <Button android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="9"
            android:textSize="30dp"/>

        <Button android:id="@+id/bSub"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="-"
            android:textSize="45dp"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/row3"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:weightSum="100">

        <Button android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="4"
            android:textSize="30dp"/>

        <Button android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="5"
            android:textSize="30dp"/>

        <Button android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="6"
            android:textSize="30dp"/>

        <Button android:id="@+id/bAdd"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="+"
            android:textSize="45dp"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/row4"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13">

        <Button android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="1"
            android:textSize="30dp"/>

        <Button android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="2"
            android:textSize="30dp"/>

        <Button android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="3"
            android:textSize="30dp"/>

        <Button android:id="@+id/bBrac"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="( )"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/row5"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13">

        <Button android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="0"
            android:textSize="30dp"/>

        <Button android:id="@+id/bDec"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="."
            android:textSize="45dp"/>

        <Button android:id="@+id/bBlank"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text=""
            android:textSize="30dp"/>

        <Button android:id="@+id/bEquals"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="fill_parent"
            android:text="="
            android:textSize="45dp"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/row6"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="13">

    </LinearLayout>

</LinearLayout>
